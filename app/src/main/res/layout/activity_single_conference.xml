<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <RelativeLayout
        android:id="@+id/layout_single_conference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SingleConferenceActivity">

        <ImageView
            android:id="@+id/banner_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/encuentromujeres" />

        <LinearLayout
            android:id="@+id/hours_banner"
            android:layout_width="326dp"
            android:layout_height="match_parent"
            android:layout_below="@id/banner_header"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_text_hours"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_weight="1"
                android:background="@drawable/buttonstyle"
                android:padding="@dimen/dimen_16dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                tools:text="@string/start_hour_event_8" />

            <TextView
                android:id="@+id/end_text_hours"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_weight="1"
                android:background="@drawable/buttonstyle"
                android:padding="@dimen/dimen_16dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                tools:text="@string/end_hour_event_8" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/card_layout_height"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hours_banner"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp">

            <TextView
                android:id="@+id/single_conference_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/textOnPrimary"
                android:textSize="@dimen/font_large"
                android:textStyle="normal"
                tools:text="@string/name_event_8" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/single_conference_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_centerInParent="true"
            android:background="@drawable/tittle_style"
            android:textAlignment="center"
            android:textColor="@color/textOnAccent"
            android:textSize="@dimen/font_medium"
            android:textStyle="normal"
            tools:text="@string/author_event_8" />

        <TextView
            android:id="@+id/single_conference_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/single_conference_author"
            android:layout_centerInParent="true"
            android:paddingEnd="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:textColor="@color/text"
            android:textSize="@dimen/font_medium"
            android:textStyle="normal"
            tools:text="@string/description_event_8" />

        <ImageView
            android:id="@+id/banner_footer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/single_conference_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:src="@drawable/wwcodemeridaappicon" />

    </RelativeLayout>

</ScrollView>